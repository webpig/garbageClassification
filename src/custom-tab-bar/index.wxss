.tab-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 96px;
    /* background: white; */
    background: #f8f8f8;
    display: flex;
    padding: 0 120px;
    justify-content: space-between;
    padding-bottom: env(safe-area-inset-bottom);
  }
  
