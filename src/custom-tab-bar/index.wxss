  .tab-bar-item {
    /* flex: 1; */
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
  }
  
  .tab-bar-item cover-image {
    width: 54px;
    height: 54px;
  }
  
  .tab-bar-item cover-view {
    font-size: 20px;
  }

  .icon-camera {
    width: 54px;
    height: 54px;
  }

  .camera-wrap {
    position: fixed;
    left: 50%;
    transform: translateX(-50%);
    bottom: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 108px;
    height: 108px;
    border-radius: 108px;
    background: #f4ea2a;
    z-index: 9999; 
  }
  