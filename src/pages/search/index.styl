.search
    padding 0 30rpx
    .header
        display flex
        align-items center
        margin 28rpx 0
        .input-wrap 
            position relative
            width 100%
            height 80rpx
            box-sizing border-box
            padding-right 60rpx
            background #f8f8f8
            border-radius 80rpx
            border 1rpx solid #eee
            .icon-search 
                position absolute
                left 30rpx
                top 50%
                transform translateY(-50%)
            .icon-clear
                position absolute
                right 30rpx
                top 50%
                transform translateY(-50%)        
            .input  
                height 100%
                padding-left 72rpx
                font-size 28rpx
        .cancel-btn 
            width 100rpx
            font-size 28rpx
            text-align right
    .list
        .item
            display flex
            align-items center
            height 80rpx
            border-bottom 1px solid #eee
            .name
                color #000
                font-size 28rpx
            .type
                font-size 24rpx
                color #666
                background #f4f4f4
                padding 4rpx 12rpx
                margin-left 12rpx
    .history-header
        display flex
        align-items center
        justify-content space-between
        font-size 28rpx
        color #000
        font-weight bold
        margin-bottom 28rpx
        .icon-clear-history
            width: 25.2rpx;
            height: 31.2rpx;
    .history-item
        padding 12rpx 24rpx
        height 30rpx
        line-height 30rpx
        font-size 24rpx
        color #333
        border-radius 30rpx
        display inline-block
        background #eee
        margin-right 18rpx
        margin-bottom 18rpx
    .empty
        text-align center
        margin-top 200rpx
        font-size 28rpx
    .recycle 
        width 350rpx
        height 350rpx
        margin 0 auto
        display block
        margin-top 300rpx
        
